# Community Resource Hub
# A simple platform for neighbors to share resources and build community

# Initialize community state
state totalResources 4
state totalMembers 12

# Main header
show "container"
  show "heading" {"text": "üå± Community Resource Hub", "class": "text-center text-green-600"}
  show "paragraph" {"text": "Your neighborhood's digital commons", "class": "text-center text-gray-600"}

# Quick stats
show "container"
  show "row"
    show "col"
      show "card" {"title": "Resources", "content": "4"}
    show "col"
      show "card" {"title": "Members", "content": "12"}
    show "col"
      show "card" {"title": "Community Owned", "content": "100%"}

# Action buttons
show "container"
  show "row"
    show "button" {"text": "Add Resource", "onClick": "add-resource", "class": "bg-green-500 hover:bg-green-600"}
    show "button" {"text": "Browse All", "onClick": "browse-all", "class": "bg-blue-500 hover:bg-blue-600"}

# Available resources
show "container"
  show "heading" {"text": "Available Resources", "class": "text-gray-800"}
  show "grid"
    show "card" {"title": "üî® Power Tools", "content": "Drill, saw, sander available from Maria"}
      show "button" {"text": "Request", "onClick": "request-tools", "class": "bg-green-500 text-white"}
    show "card" {"title": "üìö Kids Books", "content": "Ages 5-12, excellent condition from Ahmed"}
      show "button" {"text": "Browse", "onClick": "browse-books", "class": "bg-blue-500 text-white"}
    show "card" {"title": "üå± Garden Seeds", "content": "Tomatoes, herbs, flowers from Elena"}
      show "button" {"text": "Get Seeds", "onClick": "get-seeds", "class": "bg-purple-500 text-white"}

# Add resource form
show "container"
  show "heading" {"text": "Share a Resource", "class": "text-gray-800"}
  show "form" {"name": "new-resource", "onSubmit": "submit-resource"}
    show "input" {"label": "Resource Title", "name": "title", "placeholder": "e.g., Garden Tools"}
    show "input" {"label": "Description", "name": "description", "placeholder": "What you're offering..."}
    show "input" {"label": "Your Name", "name": "contact", "placeholder": "How neighbors can reach you"}
    show "button" {"text": "Share Resource", "class": "bg-green-500 text-white"}

# Community message
show "container"
  show "card" {"title": "Building Community Together"}
    show "paragraph" {"text": "Join your neighbors in creating a more connected, sustainable community. Every shared resource makes our neighborhood stronger."}
    show "row"
      show "button" {"text": "Join Community", "onClick": "join-community", "class": "bg-blue-500 text-white"}
      show "button" {"text": "Learn More", "onClick": "learn-more", "class": "bg-gray-500 text-white"}

# Event handlers
when "add-resource" data
  set totalResources (+ totalResources 1)

when "join-community" data
  set totalMembers (+ totalMembers 1)

when "submit-resource" data
  set totalResources (+ totalResources 1)

when "request-tools" data
  set totalResources totalResources

when "browse-books" data
  set totalResources totalResources

when "get-seeds" data
  set totalResources totalResources

when "browse-all" data
  set totalResources totalResources

when "learn-more" data
  set totalResources totalResources

when "test-click" data
  # Just a simple event handler 

